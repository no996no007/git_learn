#include <cmath>
client = nh.serviceClient<gazebo_msgs::GetModelState>("/gazebo/get_model_state");
gazebo_msgs::GetModelState uav;
uav.request.model_name = "ardrone";
uav.request.relative_entity_name = "world";
client.call(uav);
float pi = 3.14
float x = uav.response.pose.position.x;
float y = uav.response.pose.position.y;
float z = uav.response.pose.position.z;
float angle;
if(相机偏转角>=0):
    angle = pi - 相机偏转角;
if(相机偏转角<0):
    angle= -pi - 相机偏转角;
rotation = [[cos(angle),-sin(angle),0],[sin(angle),cos(angle),0],[0,0,1]];
rela_position = [相对坐标z,相对坐标-x,相对坐标-y];
float rela_x=rotation[0][0]*x+rotation[0][1]*相对坐标z;
float rela_y=rotation[1][0]*x+rotation[1][1]*相对坐标-x;
x+=rela_x;
y+=rela_y;
